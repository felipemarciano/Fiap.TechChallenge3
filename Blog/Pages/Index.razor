@page "/"
@attribute [Authorize]
@using Blog.Data
@using System.ComponentModel.DataAnnotations;
@inject BlogPostService BlogPostService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime


<PageTitle>Home</PageTitle>

<MudContainer Class="mt-4" MaxWidth="MaxWidth.Medium">
    <MudItem xs="12">
        <div class="d-inline d-flex">
            <MudIcon Class="mt-1 me-2" Icon="@Icons.Material.Filled.Feed"></MudIcon>
            <MudText Typo="Typo.h6">Notícias</MudText>
        </div>
        @if (listBlogPost != null)
        {
            foreach (var blog in listBlogPost)
            {
                <MudCard Class="my-4">
                    <MudCardHeader>
                        <CardHeaderContent>
                            @blog.Title
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        @((MarkupString)(blog.Content ?? ""))                        
                    </MudCardContent>
                </MudCard>
            }
        }
        else
        {
            @for (int i = 0; i < 8; i++)
            {
                <MudCard Class="my-4">
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudSkeleton Animation="Animation.Wave" />
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudSkeleton Animation="Animation.Wave" />
                        </CardHeaderContent>
                        <CardHeaderContent>
                            <MudSkeleton Animation="Animation.Wave" />
                            <MudSkeleton Animation="Animation.Wave" />
                            <MudSkeleton Animation="Animation.Wave" />
                            <MudSkeleton Animation="Animation.Wave" />
                            <MudSkeleton Animation="Animation.Wave" />
                            <MudSkeleton Animation="Animation.Wave" />
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudSkeleton Animation="Animation.Wave" />
                        <MudSkeleton Animation="Animation.Wave" />
                        <MudSkeleton Animation="Animation.Wave" />
                    </MudCardContent>
                </MudCard>
            }
        }
    </MudItem>
</MudContainer>


@code {
    List<BlogPostModel>? listBlogPost;
    protected override async Task OnInitializedAsync()
    {
        listBlogPost = await BlogPostService.Get() ?? new();
    }


}